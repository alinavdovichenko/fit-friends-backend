{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/account-config": ["libs/account/config/src/index.ts"],
      "@project/authentication": ["libs/account/authentication/src/index.ts"],
      "@project/balance": ["libs/balance/src/index.ts"],
      "@project/client-room": ["libs/client-room/src/index.ts"],
      "@project/core": ["libs/shared/core/src/index.ts"],
      "@project/feedback": ["libs/feedback/src/index.ts"],
      "@project/file": ["libs/file/src/index.ts"],
      "@project/friend": ["libs/friend/src/index.ts"],
      "@project/mail": ["libs/mail/src/index.ts"],
      "@project/models": ["libs/models/src/index.ts"],
      "@project/notify": ["libs/notify/src/index.ts"],
      "@project/order": ["libs/order/src/index.ts"],
      "@project/personal-order": ["libs/personal-order/src/index.ts"],
      "@project/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/shared/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/subscriber": ["libs/subscriber/src/index.ts"],
      "@project/trainer-room": ["libs/trainer-room/src/index.ts"],
      "@project/training": ["libs/training/src/index.ts"],
      "@project/user": ["libs/account/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
